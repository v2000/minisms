h3 Employee Details

form.form-horizontal(name="form", ng-submit="submit()", novalidate)

 .control-group(ng-class="errorClass('department')")
    label.control-label(for="department") Department
    .controls
      select(ng-model="employee.departmentId", name="department", require, ng-options="department._id as department.name for department in departments", autofocus)

 .control-group(ng-class="errorClass('pno')")
    label.control-label(for="pno") P-number
    .controls
      input(ng-model="employee.pno", type="number", name="pno", placeholder="P-number", require)

  .control-group(ng-class="errorClass('firstname')")
    label.control-label(for="firstname") First Name
    .controls
      input(ng-model="employee.firstname", type="text", name="firstname", placeholder="First Name", require)

  .control-group(ng-class="errorClass('lastname')")
    label.control-label(for="lastname") Last Name
    .controls
      input(ng-model="employee.lastname", type="text", name="lastname", placeholder="Last Name", require)

  .control-group(ng-class="errorClass('salary')")
    label.control-label(for="salary") Salary
    .controls
      input(ng-model="employee.salary", type="number", name="salary", placeholder="Monthly salary", require)

  .control-group
    .controls
      a.btn(ng-click="cancel()") Cancel
      button.btn.btn-success(type="submit") Save